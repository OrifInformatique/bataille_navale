<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.sectioninformatique.bataille_navale">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ship"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ship"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SetGameActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activities.SettingActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activities.GameActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activities.MultiplayersGameActivity"
        android:screenOrientation="portrait"
        tools:ignore="InnerclassSeparator" />
        <activity android:name=".Activities.EndGameActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
    </application>
</manifest>